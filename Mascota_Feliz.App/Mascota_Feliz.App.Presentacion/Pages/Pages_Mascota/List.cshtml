@page
@model Mascota_Feliz.App.Presentacion.Pages.ListModelMascota
@{
}

<h2>Lista de Mascotas</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombre de la Mascota</th>
      <th scope="col">Especie</th>
      <th scope="col">Raza</th>
      <th scope="col">Color</th>
      <th scope="col">Propietario</th>
      <th scope="col">Veterinario</th>
      
    </tr>
<br>

 @foreach (var _Mascota in Model.mascotas)
 {
    <tr>
        <td>@_Mascota.id</td>
        <td>@_Mascota.Nombre_Mascota</td>
        <td>@_Mascota.Especie</td>
        <td>@_Mascota.Raza</td>
        <td>@_Mascota.Color</td>
        <td>@_Mascota.propietario</td>
        <td>@_Mascota.medico_veterinario</td>
        
        <td>
          <a class="btn btn-outline-warning" asp-page = "./Edit" asp-route-IdMascota="@_Mascota.id">Editar</a>
          <i class="fas fa-info_circle fa-lg" ></i>
        </td>

        <td>
          <a class="btn btn-outline-danger" asp-page = "./Delete" asp-route-IdMascota="@_Mascota.id">Borrar</a>
          <i class="fas fa-trash_circle fa-lg" ></i>
        </td>               
    </tr>
 }

</table>
<br>
<br>
<a class="btn btn-outline-info" asp-page = "./Details" >Regresar</a>