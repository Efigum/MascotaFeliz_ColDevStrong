@page
@model Mascota_Feliz.App.Presentacion.Pages.SearchModelMascota
@{
}

<h2>Busqueda de Mascotas</h2>

<form class="row g-3" method="get">
  <div class="col-auto">
    <input type="text" readonly class="form-control-plaintext" value="Nombre de la Mascota">
  </div>
  <div class="col-auto">
    <input class="form-control" placeholder="Ingrese el Nombre de la Mascota">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3" id="BuscarNombre">Buscar Mascota</button>
  </div>
</form>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombre de la Mascota</th>
      <th scope="col">Especie</th>
      <th scope="col">Raza</th>
      <th scope="col">Color</th>
      
    </tr>
<br>
@foreach (var mascota in Model.mascotas)
 {
    <tr>
        <td>@mascota.id</td>
        <td>@mascota.Nombre_Mascota</td>
        <td>@mascota.Especie</td>
        <td>@mascota.Raza</td>
        <td>@mascota.Color</td>
        
        <td>
          <a class="btn btn-primary table-btn" asp-page = "./Edit" >Editar</a>
          <i class="fas fa-info_circle fa-lg" ></i>
        </td>

        <td>
          <a class="btn btn-primary table-btn" asp-page = "./Delete" >Borrar</a>
          <i class="fas fa-trash_circle fa-lg" ></i>
        </td>               
    </tr>
 }
 
</table>
<br>
<br>
<a class="btn btn-outline-info" asp-page = "./Details" >Regresar</a>
