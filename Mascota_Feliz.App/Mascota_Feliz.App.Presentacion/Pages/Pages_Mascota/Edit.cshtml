@page
@model Mascota_Feliz.App.Presentacion.Pages.EditModelMascota
@{
}

<h5>Realiza la actualización de datos y oprime guardar:</h5>

<form method="post">
  <div class="mb-3">
    <input type="hidden" asp-for = "mascota.id"/>
    <label>Nombre de la Mascota</label>
    <input asp-for = "mascota.Nombre_Mascota" type="text" class="form-control" required ="required">
     </div>

      <div class="mb-3">
    <label>Especie</label>
    <input asp-for = "mascota.Especie"type="text" class="form-control" required ="required">
     </div>

     <div class="mb-3">
    <label>Raza</label>
    <input asp-for = "mascota.Raza"type="text" class="form-control" required ="required">
     </div>

    <div class="mb-3">
    <label>Color</label>
    <input asp-for = "mascota.Color"type="text" class="form-control" required ="required">
     </div>

<div class="form-group">Seleccione el Propietario de la Mascota:
  <br>
    <select name= "idpropietario" class="form-control" id="idpropietario">
    <option>Seleccione:</option>
    
@foreach (var _Propietario in Model.propietarios)

{
   <option value="@_Propietario.id">@_Propietario.Nombres_Propietario</option>
}

    </select>
</div>
<br>

<div class="form-group">Seleccione el Médico Veterinario:
  <br>
    <select name= "idveterinario" class="form-control" id="idveterinario">
    <option>Seleccione:</option>
    
@foreach (var _Veterinario in Model.veterinarios)

{
   <option value="@_Veterinario.id">@_Veterinario.Nombre_Veterinario</option>
}

    </select>
</div>    

                 
  <button type="submit" class="btn btn-primary">Guardar</button>
  
</form>

