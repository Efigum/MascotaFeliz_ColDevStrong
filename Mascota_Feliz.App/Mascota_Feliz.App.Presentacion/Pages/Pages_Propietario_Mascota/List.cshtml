@page
@model Mascota_Feliz.App.Presentacion.Pages.ListModelPropietario_Mascota
@{
    
}

<h2>Lista de Propietarios</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Dirección</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Correo Electrónico</th>
      <!--<th scope="col">Editar</th>-->
      <!--<th scope="col">Eliminar</th>-->
      <!--<th scope="col">Detalles</th>-->
    </tr>
<br>

 @foreach (var propietario_Mascota in Model.propietarios)
 {
    <tr>
        <td>@propietario_Mascota.id</td>
        <td>@propietario_Mascota.Nombres_Propietario</td>
        <td>@propietario_Mascota.Apellidos_Propietario</td>
        <td>@propietario_Mascota.Direccion_Propietario</td>
        <td>@propietario_Mascota.Telefono_Propietario</td>
        <td>@propietario_Mascota.Correo_Electronico</td>
        <td>
          <a class="btn btn-primary table-btn" asp-page = "./Edit" >Editar</a>
          <i class="fas fa-info_circle fa-lg" ></i>
        </td>

        <td>
          <a class="btn btn-primary table-btn" asp-page = "./Delete" >Borrar</a>
          <i class="fas fa-trash_circle fa-lg" ></i>
        </td>               
    </tr>
 }

</table>