@page
@model Mascota_Feliz.App.Presentacion.Pages.ListModelMedico_Veterinario
@{
}

<h2>Lista de Medicos Veterinarios</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Dirección</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Tarjeta Profesional</th>
    </tr>
<br>

 @foreach (var medico_Veterinario in Model.veterinarios)
 {
    <tr>
        <td>@medico_Veterinario.id</td>
        <td>@medico_Veterinario.Nombre_Veterinario</td>
        <td>@medico_Veterinario.Apellidos_Veterinario</td>
        <td>@medico_Veterinario.Direccion_Veterinario</td>
        <td>@medico_Veterinario.Telefono_Veterinario</td>
        <td>@medico_Veterinario.Tarjeta_Profesional</td>
        <td>
          <a class="btn btn-outline-warning" asp-page = "./Edit" >Editar</a>
          <i class="fas fa-info_circle fa-lg" ></i>
        </td>

        <td>
          <a class="btn btn-outline-danger" asp-page = "./Delete" >Borrar</a>
          <i class="fas fa-trash_circle fa-lg" ></i>
        </td>               
    </tr>
 }

</table>

<br>
<br>
<a class="btn btn-outline-info" asp-page = "./Details" >Regresar</a>